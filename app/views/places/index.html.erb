<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Lugares</h1>
  <%= link_to 'Cadastrar local', new_place_path %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Initials</th>
        <th>Street</th>
        <th>Number</th>
        <th>Neighborhood</th>
        <th>City</th>
        <th>State</th>

        <th colspan="3"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td><%= place.latitude %></td>
          <td><%= place.longitude %></td>
          <td><%= place.initials %></td>
          <td><%= place.street %></td>
          <td><%= place.number %></td>
          <td><%= place.neighborhood %></td>
          <td><%= place.city %></td>
          <td><%= place.state %></td>

          <td><%= link_to 'Show', place %></td>
          <td><%= link_to 'Edit', edit_place_path(place) %></td>
          <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>
