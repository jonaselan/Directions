<!DOCTYPE html>
<html>
  <head>
    <title>Directions</title>
    <%= Gon::Base.render_data %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Directions</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <!-- class="active" -->
            <li><a href="/"><%= t 'application.link_places' %></a></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= t 'application.link_directions' %>
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/distances"><%= t 'application.link_path' %></a></li>
                <li><a href="/paths"><%= t 'application.link_distances' %></a></li>
                <!-- <li><a href="/melhor_caminho">Melhor caminho</a></li> -->
              </ul>
            </li>
          </ul>

          <% if current_user %>
            Hello, <%= current_user.username %>!
            <%= link_to "Log Out", logout_path, method: 'delete' %>
          <% else %>
            <%= link_to t('application.signup'), singup_path %> or
            <%= link_to t('application.loginin'), login_path %>
          <% end %>

          <p class="nav-language">
            <%= t 'application.language_text' %>:
            <%= link_to_unless_current "Português", locale: 'pt-br' %> |
            <%= link_to_unless_current "Inglês", locale: 'en' %>
          </p>
        </div>
      </div>
    </nav>

    <!-- TODO: improvement display flash mensages with I18n -->
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>

    <%= yield %>
  </body>
</html>
